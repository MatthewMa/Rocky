@model IEnumerable<Rocky.Models.AppType>   
   <div class="container p-3">
        <div class="row ml-3">
            <div class="col-6">
                App Type
            </div>
            <div class="col-6 text-right">
                <a asp-action="Create" asp-controller="AppType" class="btn btn-primary">Create AppType</a>
            </div>          
        </div>
    </div>
    @if (Model.Count() > 0)
    {
        <table class="table-bordered table table-striped">
            <thead>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Operations
                    </th>
                </tr>
            </thead>
            <tbody>

                @foreach (var appType in Model)
                {
                    <tr>
                        <td>
                            @appType.Id
                        </td>
                        <td>
                            @appType.Name
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-Id="@appType.Id" asp-controller="AppType" class="btn btn-primary">Edit</a>
                            <a asp-action="Delete" asp-route-Id="@appType.Id" asp-controller="AppType" class="btn btn-primary">Delete</a>
                        </td>
                    </tr>
                }              
            </tbody>
        </table>
    }
