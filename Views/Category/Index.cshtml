
@model IEnumerable<Rocky.Models.Category>
<div class="container p-3"> 
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Create" asp-controller="Category" class="btn btn-primary"><i class="fa fa-plus"></i>Create New Category</a>          
        </div>
    </div>
    <br/>
    @if(Model.Count()>0)
    {
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        Category Name
                    </th>
                    <th>
                        Display Order
                    </th>
                    <th>
                        Operations
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach(Category category in Model)
                {
                    <tr>
                        <td width="50%">
                            @category.Name
                        </td>
                        <td width="30%">
                            @category.DisplayOrder
                        </td>
                        <td width="20%" class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-action="Edit" asp-route-Id="@category.Id" asp-controller="Category" class="btn btn-primary mx-2"><i class="fa fa-edit"></i>Edit</a>
                                <a asp-action="Delete" asp-route-Id="@category.Id" asp-controller="Category" class="btn btn-danger mx-2"><i class="fa fa-trash-alt"></i>Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

