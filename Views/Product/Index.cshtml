@model IEnumerable<Rocky.Models.Product>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Upsert" asp-controller="Product" class="btn btn-primary"><i class="fa fa-plus"></i>Create New Product</a>
        </div>
    </div>
    <br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        Product Name
                    </th>
                    <th>
                        Price
                    </th>
                    <th>
                        Operations
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (Product product in Model)
                {
                    <tr>
                        <td width="50%">
                            @product.Name
                        </td>
                        <td width="30%">
                            @product.Price
                        </td>
                        <td width="20%" class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-action="Upsert" asp-route-Id="@product.Id" class="btn btn-primary mx-2"><i class="fa fa-edit"></i>Edit</a>
                                <a asp-action="Delete" asp-route-Id="@product.Id" class="btn btn-danger mx-2"><i class="fa fa-trash-alt"></i>Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <span class="text-info">There is no product.</span>
    }
</div>



